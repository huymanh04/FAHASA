<!-- SALE SECTION - 5 SẢN PHẨM - Chỉ hiển thị khi không filter theo danh mục và không đang tìm kiếm -->
@if (saleProducts.Any() && !(Model?.CurrentCategoryId.HasValue ?? false) && string.IsNullOrEmpty(Model?.CurrentSearch))
{
    var firstSale = saleProducts.First();
    var saleStartTime = firstSale.SaleStartTime ?? DateTime.Now;
    var saleEndTime = firstSale.SaleEndTime ?? DateTime.Now.AddHours(1);
    var currentHour = DateTime.Now.Hour;
    var nextHour = currentHour + 1;
    if (nextHour >= 24) nextHour = 0;
    <div class="sale-section">
        <div class="sale-content">
            <h2 class="sale-title"><i class="fas fa-fire me-2"></i>KHUYẾN MÃI ĐẶC BIỆT - 5 SẢN PHẨM</h2>
            <div class="sale-time-range">
                <i class="fas fa-clock me-2"></i>Khung giờ: @currentHour.ToString("00")h00 - @nextHour.ToString("00")h00
            </div>
            <div class="countdown-timer mb-4">
                <div class="countdown-item">
                    <span class="countdown-value" id="countdown-hours">00</span>
                    <span class="countdown-label">Giờ</span>
                </div>
                <div class="countdown-item">
                    <span class="countdown-value" id="countdown-minutes">00</span>
                    <span class="countdown-label">Phút</span>
                </div>
                <div class="countdown-item">
                    <span class="countdown-value" id="countdown-seconds">00</span>
                    <span class="countdown-label">Giây</span>
                </div>
            </div>
            <div class="row g-3" style="display: flex; flex-wrap: wrap;">
                @foreach (var sp in saleProducts)
                {
                    <div class="col-md-6 col-lg-4" style="display: flex;">
                        <div class="sale-product-card" style="width: 100%;">
                            <img src="/images/@(string.IsNullOrEmpty(sp.Image) ? "default.jpg" : sp.Image)" 
                                 class="sale-product-image" alt="@sp.Name" />
                            <div class="sale-product-info">
                                <div class="sale-product-name">@sp.Name</div>
                                <div class="sale-price-section">
                                    <span class="sale-price">@sp.SalePrice?.ToString("N0") đ</span>
                                    <span class="original-price">@sp.Price.ToString("N0") đ</span>
                                    <span class="sale-badge">-@((int)((1 - (sp.SalePrice ?? 0) / sp.Price) * 100))%</span>
                                </div>
                                <div class="mt-auto" style="width: 100%;">
                                    <form method="post" asp-page="/Cart" class="d-inline w-100">
                                        <input type="hidden" name="productId" value="@sp.ProductID" />
                                        <input type="hidden" name="returnUrl" value="@ViewContext.HttpContext.Request.Path" />
                                        <button type="submit" class="btn btn-danger btn-sm w-100">
                                            <i class="fas fa-cart-plus me-1"></i>Mua ngay
                                        </button>
                                    </form>
                                </div>
                            </div>
                        </div>
                    </div>
                }
            </div>
            
            <!-- Preview khung giờ tiếp theo -->
            @if (nextHourSaleProducts.Any())
            {
                var nextNextHour = nextHour + 1;
                if (nextNextHour >= 24) nextNextHour = 0;
                <div class="mt-4 p-3" style="background: rgba(255,255,255,0.1); border-radius: 12px;">
                    <h5 class="mb-3"><i class="fas fa-eye me-2"></i>Xem trước khung giờ tiếp theo (@nextHour.ToString("00")h00 - @nextNextHour.ToString("00")h00):</h5>
                    <div class="row g-2">
                        @foreach (var np in nextHourSaleProducts)
                        {
                            <div class="col-6 col-md-4 col-lg-2">
                                <div style="background: rgba(255,255,255,0.15); padding: 10px; border-radius: 8px; text-align: center; height: 100%; display: flex; flex-direction: column; align-items: center;">
                                    <img src="/images/@(string.IsNullOrEmpty(np.Image) ? "default.jpg" : np.Image)" 
                                         style="width: 60px; height: 60px; object-fit: cover; border-radius: 6px; margin-bottom: 5px; flex-shrink: 0;" />
                                    <div style="font-size: 0.75rem; font-weight: 600; margin-bottom: 5px; display: -webkit-box; -webkit-line-clamp: 2; -webkit-box-orient: vertical; overflow: hidden; min-height: 2.2em;">@np.Name</div>
                                    <div style="font-size: 0.7rem; opacity: 0.9; margin-top: auto;">@np.SalePrice?.ToString("N0") đ</div>
                                </div>
                            </div>
                        }
                    </div>
                </div>
            }
        </div>
    </div>
    <script>
      document.addEventListener('DOMContentLoaded', function(){
        if(!window.App){ console.error('App not loaded'); return; }
        var now = new Date();
        var currentHour = now.getHours();
        var nextHour = currentHour + 1; if(nextHour>=24) nextHour=0;
        var endTime = new Date(now.getFullYear(), now.getMonth(), now.getDate(), nextHour, 0, 0);
        
        var hoursEl = document.getElementById('countdown-hours');
        var minutesEl = document.getElementById('countdown-minutes');
        var secondsEl = document.getElementById('countdown-seconds');
        
        if(!hoursEl || !minutesEl || !secondsEl){
          console.error('Countdown elements not found');
          return;
        }
        
        App.registerCountdown({
          endTime: endTime,
          hoursEl: hoursEl,
          minutesEl: minutesEl,
          secondsEl: secondsEl,
          onExpire: function(){ location.reload(); }
        });
        console.log('Countdown registered, ending at:', endTime);
      });
    </script>
}

