@model IEnumerable<SportsStore.Models.ProductReview>

@{
    ViewData["Title"] = "Đánh giá của tôi";
    Layout = "_ProfileLayout";
}

<style>
    .reviews-header {
        text-align: center;
        margin-bottom: 40px;
        padding-bottom: 30px;
        border-bottom: 2px solid #f0f0f0;
    }

    .reviews-header h4 {
        font-size: 2rem;
        font-weight: 700;
        background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
        -webkit-background-clip: text;
        -webkit-text-fill-color: transparent;
        background-clip: text;
        margin-bottom: 20px;
    }

    .review-card {
        background: white;
        border-radius: 20px;
        padding: 25px;
        margin-bottom: 25px;
        box-shadow: 0 4px 15px rgba(0, 0, 0, 0.08);
        border: 1px solid #e0e0e0;
        transition: all 0.3s ease;
    }

    .review-card:hover {
        transform: translateY(-5px);
        box-shadow: 0 8px 25px rgba(0, 0, 0, 0.12);
    }

    .review-header {
        display: flex;
        justify-content: space-between;
        align-items: flex-start;
        margin-bottom: 20px;
        padding-bottom: 20px;
        border-bottom: 2px solid #f0f0f0;
        flex-wrap: wrap;
        gap: 15px;
    }

    .product-info {
        flex: 1;
    }

    .product-name {
        font-size: 1.3rem;
        font-weight: 700;
        color: #333;
        margin-bottom: 8px;
        display: flex;
        align-items: center;
        gap: 10px;
    }

    .product-name a {
        color: #333;
        text-decoration: none;
        transition: all 0.3s ease;
    }

    .product-name a:hover {
        color: #667eea;
    }

    .product-name i {
        color: #667eea;
    }

    .review-date {
        color: #666;
        font-size: 0.9rem;
        display: flex;
        align-items: center;
        gap: 8px;
    }

    .rating-stars {
        display: flex;
        gap: 5px;
        align-items: center;
    }

    .star {
        font-size: 1.5rem;
        color: #ffd700;
    }

    .star.empty {
        color: #ddd;
    }

    .review-content {
        margin-bottom: 20px;
    }

    .review-comment {
        color: #333;
        font-size: 1rem;
        line-height: 1.6;
        padding: 15px;
        background: #f8f9fa;
        border-radius: 12px;
        border-left: 4px solid #667eea;
    }

    .review-meta {
        display: flex;
        justify-content: space-between;
        align-items: center;
        padding-top: 15px;
        border-top: 1px solid #f0f0f0;
        flex-wrap: wrap;
        gap: 10px;
    }

    .reviewer-name {
        color: #666;
        font-size: 0.9rem;
        display: flex;
        align-items: center;
        gap: 8px;
    }

    .reviewer-name i {
        color: #667eea;
    }

    .empty-state {
        text-align: center;
        padding: 60px 20px;
        background: white;
        border-radius: 20px;
        box-shadow: 0 4px 15px rgba(0, 0, 0, 0.08);
    }

    .empty-state-icon {
        font-size: 4rem;
        color: #ccc;
        margin-bottom: 20px;
    }

    .empty-state h5 {
        color: #666;
        font-weight: 600;
        margin-bottom: 10px;
    }

    .empty-state p {
        color: #999;
    }

    @@media (max-width: 768px) {
        .review-header {
            flex-direction: column;
        }

        .review-meta {
            flex-direction: column;
            align-items: flex-start;
        }
    }
</style>

<div class="reviews-header">
    <h4>
        <i class="fas fa-star me-2"></i>
        Đánh giá của tôi
    </h4>
</div>

@if (!Model.Any())
{
    <div class="empty-state">
        <div class="empty-state-icon">
            <i class="fas fa-star"></i>
        </div>
        <h5>Bạn chưa có đánh giá nào</h5>
        <p>Hãy mua sản phẩm và chia sẻ đánh giá của bạn để giúp người khác có thêm thông tin!</p>
    </div>
}
else
{
    foreach (var review in Model)
    {
        <div class="review-card">
            <div class="review-header">
                <div class="product-info">
                    <div class="product-name">
                        <i class="fas fa-box"></i>
                        @if (review.Product != null)
                        {
                            <a href="@Url.Action("Details", "Home", new { id = review.ProductID })">
                                @review.Product.Name
                            </a>
                        }
                        else
                        {
                            <span>Sản phẩm #@review.ProductID</span>
                        }
                    </div>
                    <div class="review-date">
                        <i class="fas fa-calendar-alt"></i>
                        @review.Date.ToString("dd/MM/yyyy HH:mm")
                    </div>
                </div>
                <div class="rating-stars">
                    @for (int i = 1; i <= 5; i++)
                    {
                        <span class="star @(i <= review.Rating ? "" : "empty")">
                            <i class="fas fa-star"></i>
                        </span>
                    }
                </div>
            </div>

            <div class="review-content">
                <div class="review-comment">
                    @if (string.IsNullOrEmpty(review.Comment))
                    {
                        <span class="text-muted">Không có bình luận</span>
                    }
                    else
                    {
                        @review.Comment
                    }
                </div>
            </div>

            <div class="review-meta">
                <div class="reviewer-name">
                    <i class="fas fa-user"></i>
                    @review.CustomerName
                </div>
                @if (review.Product != null)
                {
                    <a href="@Url.Action("Details", "Home", new { id = review.ProductID })" 
                       class="btn btn-sm" 
                       style="background: linear-gradient(135deg, #667eea 0%, #764ba2 100%); color: white; border-radius: 12px; padding: 8px 16px; text-decoration: none; transition: all 0.3s ease;">
                        <i class="fas fa-eye me-1"></i>
                        Xem sản phẩm
                    </a>
                }
            </div>
        </div>
    }
}

