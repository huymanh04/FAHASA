@inject Microsoft.AspNetCore.Identity.UserManager<SportsStore.Models.ApplicationUser> UserManager
@{
    var user = await UserManager.GetUserAsync(User);
    var userId = user?.Id ?? "";
    var userName = user?.UserName ?? "Khách";
    var isAdmin = User.IsInRole("Admin");
}

<style>
    .chat-box-container {
        position: fixed;
        bottom: 20px;
        right: 20px;
        z-index: 9999;
        width: 380px;
        max-height: 600px;
        display: none;
    }
    
    .chat-box-container.open {
        display: block;
    }
    
    .chat-toggle-btn {
        position: fixed;
        bottom: 20px;
        right: 20px;
        width: 60px;
        height: 60px;
        border-radius: 50%;
        background: linear-gradient(135deg, #dc3545 0%, #c82333 100%);
        color: white;
        border: none;
        box-shadow: 0 4px 15px rgba(220, 53, 69, 0.4);
        cursor: pointer;
        display: flex;
        align-items: center;
        justify-content: center;
        font-size: 24px;
        z-index: 10000;
        transition: all 0.3s ease;
    }
    
    .chat-toggle-btn:hover {
        transform: scale(1.1);
        box-shadow: 0 6px 20px rgba(220, 53, 69, 0.5);
    }
    
    .chat-box {
        background: white;
        border-radius: 16px;
        box-shadow: 0 8px 30px rgba(0, 0, 0, 0.2);
        display: flex;
        flex-direction: column;
        height: 500px;
        overflow: hidden;
    }
    
    .chat-header {
        background: linear-gradient(135deg, #dc3545 0%, #c82333 100%);
        color: white;
        padding: 15px 20px;
        display: flex;
        justify-content: space-between;
        align-items: center;
    }
    
    .chat-header h5 {
        margin: 0;
        font-weight: 600;
    }
    
    .chat-close-btn {
        background: none;
        border: none;
        color: white;
        font-size: 20px;
        cursor: pointer;
    }
    
    .chat-messages {
        flex: 1;
        overflow-y: auto;
        padding: 15px;
        background: #f8f9fa;
    }
    
    .message {
        margin-bottom: 12px;
        display: flex;
        flex-direction: column;
    }
    
    /* Customer (user) messages: display on the right */
    .message.user {
        align-items: flex-end;
    }
    
    /* Admin messages: display on the left */
    .message.admin {
        align-items: flex-start;
    }
    
    .message-bubble {
        max-width: 75%;
        padding: 10px 15px;
        border-radius: 18px;
        word-wrap: break-word;
    }
    
    /* Admin bubble: left, highlighted */
    .message.admin .message-bubble {
        background: linear-gradient(135deg, #dc3545 0%, #c82333 100%);
        color: white;
        border-radius: 12px;
    }
    
    /* User bubble: right, neutral */
    .message.user .message-bubble {
        background: white;
        color: #333;
        border: 1px solid #e0e0e0;
        border-radius: 12px;
    }
    
    .message-time {
        font-size: 11px;
        color: #999;
        margin-top: 4px;
    }
    
    .chat-input-area {
        padding: 15px;
        background: white;
        border-top: 1px solid #e0e0e0;
        display: flex;
        gap: 10px;
    }
    
    .chat-input {
        flex: 1;
        border: 1px solid #e0e0e0;
        border-radius: 20px;
        padding: 10px 15px;
        outline: none;
    }
    
    .chat-send-btn {
        background: linear-gradient(135deg, #dc3545 0%, #c82333 100%);
        color: white;
        border: none;
        border-radius: 50%;
        width: 40px;
        height: 40px;
        display: flex;
        align-items: center;
        justify-content: center;
        cursor: pointer;
    }
</style>

<button class="chat-toggle-btn" onclick="toggleChatBox()">
    <i class="fas fa-comments"></i>
</button>

<div class="chat-box-container" id="chatBoxContainer">
    <div class="chat-box">
        <div class="chat-header">
            <h5><i class="fas fa-headset me-2"></i>Hỗ trợ trực tuyến</h5>
            <button class="chat-close-btn" onclick="toggleChatBox()">
                <i class="fas fa-times"></i>
            </button>
        </div>
        <div class="chat-messages" id="chatMessages">
            @if (isAdmin)
            {
                <div class="text-center text-muted p-3">
                    <small>Bạn đang ở chế độ Admin. Tin nhắn từ khách hàng sẽ hiển thị ở đây.</small>
                </div>
            }
            else
            {
                <div class="text-center text-muted p-3">
                    <small>Xin chào! Chúng tôi sẽ phản hồi sớm nhất có thể.</small>
                </div>
            }
        </div>
        <div class="chat-input-area">
            <input type="text" class="chat-input" id="chatInput" placeholder="Nhập tin nhắn..." onkeypress="handleChatKeyPress(event)" />
            <button class="chat-send-btn" onclick="sendMessage()">
                <i class="fas fa-paper-plane"></i>
            </button>
        </div>
    </div>
</div>

<script>
  const chatUserId = '@userId';
  const chatUserName = '@userName';
  const chatIsAdmin = @(isAdmin ? "true" : "false");
  let chatBoxOpen = false;

  function toggleChatBox(){
    chatBoxOpen = !chatBoxOpen;
    const container = document.getElementById('chatBoxContainer');
    if(chatBoxOpen){
      container.classList.add('open');
      if(window.App){ App.initChatHub({ userId: chatUserId, userName: chatUserName, isAdmin: chatIsAdmin }); }
    } else {
      container.classList.remove('open');
    }
  }

  function sendMessage(){
    const input = document.getElementById('chatInput');
    const message = input.value.trim();
    if(!message) return;
    if(!chatUserId){ alert('Vui lòng đăng nhập để gửi tin nhắn.'); window.location.href='/Account/Login'; return; }
    if(window.App){ App.sendChatMessage(message); }
    input.value='';
  }

  function handleChatKeyPress(event){ if(event.key==='Enter'){ sendMessage(); } }
</script>

