@{
    Layout = null;
}
<!DOCTYPE html>
<html lang="vi">
<head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>@ViewData["Title"] - RESTUDYSTORE</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet" />
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css" rel="stylesheet" />

    <style>
        body {
            background: linear-gradient(135deg, #f5f7fa 0%, #c3cfe2 100%);
            font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
            min-height: 100vh;
        }

        .sidebar {
            background: white;
            border-radius: 20px;
            padding: 25px 20px;
            box-shadow: 0 10px 30px rgba(0, 0, 0, 0.1);
            border: 1px solid #e0e0e0;
            position: sticky;
            top: 20px;
        }

        .sidebar h5 {
            font-size: 1.5rem;
            font-weight: 700;
            margin-bottom: 25px;
            background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
            -webkit-background-clip: text;
            -webkit-text-fill-color: transparent;
            background-clip: text;
            padding-bottom: 15px;
            border-bottom: 2px solid #f0f0f0;
        }

        .sidebar a {
            display: flex;
            align-items: center;
            gap: 12px;
            font-size: 1rem;
            padding: 14px 16px;
            color: #333;
            border-radius: 12px;
            margin-bottom: 10px;
            transition: all 0.3s ease;
            font-weight: 500;
            text-decoration: none;
            border: 1px solid transparent;
        }

        .sidebar a i {
            width: 20px;
            text-align: center;
            font-size: 1.1rem;
        }

        .sidebar a:hover {
            background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
            color: #fff;
            transform: translateX(5px);
            box-shadow: 0 4px 15px rgba(102, 126, 234, 0.3);
        }

        .sidebar a.active {
            background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
            color: #fff;
            transform: translateX(5px);
            box-shadow: 0 4px 15px rgba(102, 126, 234, 0.3);
            border-color: #667eea;
        }

        .sidebar .btn-outline-danger {
            width: 100%;
            margin-top: 20px;
            padding: 12px;
            border-radius: 12px;
            font-weight: 600;
            transition: all 0.3s ease;
            border: 2px solid #dc3545;
        }

        .sidebar .btn-outline-danger:hover {
            background: linear-gradient(135deg, #f093fb 0%, #f5576c 100%);
            border-color: #f5576c;
            transform: translateY(-2px);
            box-shadow: 0 4px 15px rgba(245, 87, 108, 0.3);
        }

        .card-profile {
            background-color: white;
            padding: 40px;
            border-radius: 20px;
            box-shadow: 0 10px 30px rgba(0, 0, 0, 0.1);
            border: 1px solid #e0e0e0;
            min-height: 500px;
        }

        .btn-back-home {
            background: white;
            color: #667eea;
            border: 2px solid #667eea;
            padding: 10px 20px;
            border-radius: 12px;
            font-weight: 600;
            text-decoration: none;
            display: inline-flex;
            align-items: center;
            gap: 8px;
            transition: all 0.3s ease;
        }

        .btn-back-home:hover {
            background: #667eea;
            color: white;
            transform: translateY(-2px);
            box-shadow: 0 4px 15px rgba(102, 126, 234, 0.3);
        }

        footer {
            background: linear-gradient(90deg, #0f2e22, #14532d);
            color: white;
            padding: 50px 0;
        }

        footer h5, footer h3 {
            text-transform: uppercase;
            font-weight: 700;
            letter-spacing: 1px;
        }

        footer a {
            color: white;
            margin: 6px 0;
            display: block;
            font-size: 15px;
            transition: all 0.3s;
        }

        footer a:hover {
            text-decoration: underline;
            color: #ffd700;
        }

        /* Modal overlay */
        .modal-overlay {
            display: none;
            position: fixed;
            inset: 0;
            background: rgba(0,0,0,0.5);
            z-index: 1050;
            justify-content: center;
            align-items: center;
        }

        .modal-overlay.active {
            display: flex;
        }

        .modal {
            background: white;
            padding: 25px 35px;
            border-radius: 10px;
            max-width: 420px;
            width: 90%;
            box-shadow: 0 8px 24px rgba(0,0,0,0.2);
            text-align: center;
        }

        .modal h3 {
            margin-bottom: 20px;
            color: #14532d;
            font-weight: bold;
            font-size: 20px;
        }

        .modal-buttons {
            display: flex;
            justify-content: center;
            gap: 20px;
        }

        .btn-confirm, .btn-cancel {
            min-width: 110px;
            padding: 10px 16px;
            border-radius: 6px;
            font-weight: 600;
            border: none;
            cursor: pointer;
            transition: all 0.3s;
        }

        .btn-confirm {
            background: #1e8141;
            color: white;
        }

        .btn-confirm:hover {
            background: #0f5123;
        }

        .btn-cancel {
            background: #ced4da;
            color: #333;
        }

        .btn-cancel:hover {
            background: #999;
            color: white;
        }
    </style>
</head>
<body>

<div class="container py-4">
    <div class="row gy-4">
        <!-- Sidebar -->
        <div class="col-md-3 sidebar">
            <h5><i class="fas fa-user-circle me-2"></i>Tài khoản</h5>
            <a class="@(ViewContext.RouteData.Values["controller"]?.ToString() == "Account" && ViewContext.RouteData.Values["action"]?.ToString() != "Edit" ? "active" : "")" href="/Account/Profile">
                <i class="fas fa-id-badge"></i>
                <span>Hồ sơ cá nhân</span>
            </a>
            <a class="@(ViewContext.RouteData.Values["controller"]?.ToString() == "Order" ? "active" : "")" href="/Order/MyOrders">
                <i class="fas fa-box"></i>
                <span>Đơn hàng của tôi</span>
            </a>            
            <a class="@(ViewContext.RouteData.Values["controller"]?.ToString() == "Reviews" ? "active" : "")" href="/Reviews/MyReviews">
                <i class="fas fa-star"></i>
                <span>Đánh giá của tôi</span>
            </a>
            <a href="#" onclick="showLogoutModal(event); return false;" class="btn btn-outline-danger">
                <i class="fas fa-sign-out-alt me-1"></i>Đăng xuất
            </a>
            
            <!-- Form ẩn để submit logout -->
            <form id="logoutForm" method="post" action="@Url.Action("LogoutPost", "Account")" style="display:none;">
                @Html.AntiForgeryToken()
            </form>
        </div>
        <!-- Main Content -->
        <div class="col-md-9">
            <div class="card-profile">
                <div class="mb-4">
                    <a href="/" class="btn-back-home">
                        <i class="fas fa-arrow-left"></i>
                        Quay lại trang chủ
                    </a>
                </div>
                @RenderBody()
            </div>
        </div>
    </div>
</div>


<!-- Footer -->
<footer>
    <div class="container">
        <div class="row">
            <!-- Logo + Giới thiệu -->
            <div class="col-md-4 mb-4">
                <h3 class="text-warning">RESTUDY STORE</h3>
                <p>Website học tập đa dịch vụ hàng đầu, cung cấp giáo trình cũ, dụng cụ học tập và nhiều sản phẩm hỗ trợ học tập khác.</p>
                <p><i class="fas fa-map-marker-alt me-2"></i>806 Lê Quang Đạo, Trung Chánh, Hóc Môn, Hồ Chí Minh</p>
                <p><i class="fas fa-phone-alt me-2"></i>Hotline: 0354 902 144</p>
                <p><i class="fas fa-envelope me-2"></i>Email: anhngo01012005@gmail.com</p>
            </div>

            <!-- Liên kết nhanh -->
            <div class="col-md-3 mb-4">
                <h5 class="text-warning">Liên kết nhanh</h5>
                <a href="#">Trang chủ</a>
                <a href="#">Khuyến mãi</a>
                <a href="#">Chính sách</a>
                <a href="#">Bảo mật</a>
                <a href="#">Điều khoản</a>
            </div>

            <!-- Kết nối mạng xã hội -->
            <div class="col-md-5 mb-4">
                <h5 class="text-warning">Kết nối với chúng tôi</h5>
                <div class="d-flex gap-3 fs-4 mb-3">
                    <a href="#" class="text-white"><i class="fab fa-facebook-square"></i></a>
                    <a href="#" class="text-white"><i class="fab fa-instagram"></i></a>
                    <a href="#" class="text-white"><i class="fab fa-twitter-square"></i></a>
                    <a href="#" class="text-white"><i class="fab fa-youtube"></i></a>
                </div>
                <form class="d-flex" onsubmit="event.preventDefault(); alert('Cảm ơn bạn đã đăng ký nhận tin!');">
                    <input type="email" class="form-control me-2" placeholder="Nhập email nhận tin" required>
                    <button type="submit" class="btn btn-warning">Đăng ký</button>
                </form>
            </div>
        </div>
        <hr class="border-light" />
        <div class="text-center small">
            &copy; 2025 RestudyStore – Website học tập đa dịch vụ | Designed by Bạn
        </div>
    </div>
</footer>
@RenderSection("Scripts", required: false)

</body>
</html>
<!-- Modal Đăng xuất -->
<div id="logoutModal" class="logout-modal-overlay">
    <div class="logout-modal-container">
        <div class="logout-modal-content">
            <div class="logout-modal-icon">
                <i class="fas fa-sign-out-alt"></i>
            </div>
            <h3 class="logout-modal-title">Xác nhận đăng xuất</h3>
            <p class="logout-modal-message">Bạn có chắc chắn muốn đăng xuất khỏi tài khoản?</p>
            <div class="logout-modal-buttons">
                <button type="button" class="logout-btn-confirm" onclick="confirmLogout()">
                    <i class="fas fa-check me-2"></i>Đăng xuất
                </button>
                <button type="button" class="logout-btn-cancel" onclick="closeLogoutModal()">
                    <i class="fas fa-times me-2"></i>Hủy
                </button>
            </div>
        </div>
    </div>
</div>

<style>
    .logout-modal-overlay {
        display: none;
        position: fixed;
        top: 0;
        left: 0;
        width: 100%;
        height: 100%;
        background: rgba(0, 0, 0, 0.6);
        backdrop-filter: blur(4px);
        z-index: 9999;
        animation: fadeIn 0.3s ease;
        align-items: center;
        justify-content: center;
    }

    .logout-modal-overlay.show {
        display: flex;
    }

    .logout-modal-container {
        animation: slideUp 0.3s ease;
        max-width: 90%;
        width: 100%;
        max-width: 450px;
    }

    .logout-modal-content {
        background: white;
        border-radius: 20px;
        padding: 40px 30px;
        box-shadow: 0 20px 60px rgba(0, 0, 0, 0.3);
        text-align: center;
        position: relative;
    }

    .logout-modal-icon {
        width: 80px;
        height: 80px;
        margin: 0 auto 20px;
        background: linear-gradient(135deg, #f093fb 0%, #f5576c 100%);
        border-radius: 50%;
        display: flex;
        align-items: center;
        justify-content: center;
        animation: pulse 2s infinite;
    }

    .logout-modal-icon i {
        font-size: 2.5rem;
        color: white;
    }

    .logout-modal-title {
        font-size: 1.5rem;
        font-weight: 700;
        color: #333;
        margin-bottom: 15px;
        background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
        -webkit-background-clip: text;
        -webkit-text-fill-color: transparent;
        background-clip: text;
    }

    .logout-modal-message {
        color: #666;
        font-size: 1rem;
        margin-bottom: 30px;
        line-height: 1.6;
    }

    .logout-modal-buttons {
        display: flex;
        gap: 15px;
        justify-content: center;
    }

    .logout-btn-confirm,
    .logout-btn-cancel {
        padding: 12px 30px;
        border: none;
        border-radius: 25px;
        font-weight: 600;
        font-size: 1rem;
        cursor: pointer;
        transition: all 0.3s ease;
        display: inline-flex;
        align-items: center;
        justify-content: center;
    }

    .logout-btn-confirm {
        background: linear-gradient(135deg, #f093fb 0%, #f5576c 100%);
        color: white;
        box-shadow: 0 4px 15px rgba(245, 87, 108, 0.4);
    }

    .logout-btn-confirm:hover {
        transform: translateY(-2px);
        box-shadow: 0 6px 20px rgba(245, 87, 108, 0.5);
    }

    .logout-btn-cancel {
        background: #e0e0e0;
        color: #333;
    }

    .logout-btn-cancel:hover {
        background: #d0d0d0;
        transform: translateY(-2px);
    }

    @@keyframes fadeIn {
        from {
            opacity: 0;
        }
        to {
            opacity: 1;
        }
    }

    @@keyframes slideUp {
        from {
            transform: translateY(30px);
            opacity: 0;
        }
        to {
            transform: translateY(0);
            opacity: 1;
        }
    }

    @@keyframes pulse {
        0%, 100% {
            transform: scale(1);
        }
        50% {
            transform: scale(1.05);
        }
    }

    @@media (max-width: 576px) {
        .logout-modal-content {
            padding: 30px 20px;
        }

        .logout-modal-icon {
            width: 60px;
            height: 60px;
        }

        .logout-modal-icon i {
            font-size: 2rem;
        }

        .logout-modal-title {
            font-size: 1.3rem;
        }

        .logout-modal-buttons {
            flex-direction: column;
        }

        .logout-btn-confirm,
        .logout-btn-cancel {
            width: 100%;
        }
    }
</style>

<script>
    function showLogoutModal(event) {
        event.preventDefault();
        document.getElementById('logoutModal').classList.add('show');
    }

    function closeLogoutModal() {
        document.getElementById('logoutModal').classList.remove('show');
    }

    function confirmLogout() {
        document.getElementById('logoutForm').submit();
    }

    // Đóng modal khi click ra ngoài
    document.addEventListener('DOMContentLoaded', function() {
        const modal = document.getElementById('logoutModal');
        modal.addEventListener('click', function(e) {
            if (e.target === modal) {
                closeLogoutModal();
            }
        });

        // Đóng modal bằng phím ESC
        document.addEventListener('keydown', function(e) {
            if (e.key === 'Escape' && modal.classList.contains('show')) {
                closeLogoutModal();
            }
        });
    });
</script>

