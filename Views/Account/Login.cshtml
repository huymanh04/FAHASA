@model LoginModel
@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="vi">
<head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Đăng nhập - FAHASA</title>

    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet" />
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css" rel="stylesheet" />

    <style>
        body {
            background: linear-gradient(135deg, #0d6efd, #1e8141);
            font-family: 'Segoe UI', sans-serif;
            min-height: 100vh;
            display: flex;
            align-items: center;
            justify-content: center;
            margin: 0;
        }

        .login-card {
            background-color: #fff;
            padding: 40px 30px;
            border-radius: 16px;
            width: 100%;
            max-width: 420px;
            box-shadow: 0 15px 35px rgba(0, 0, 0, 0.25);
            animation: fadeIn 0.8s ease;
        }

        @@keyframes fadeIn {
            from { opacity: 0; transform: translateY(-20px); }
            to { opacity: 1; transform: translateY(0); }
        }

        .icon-user {
            font-size: 56px;
            color: #0d6efd;
            margin-bottom: 10px;
        }

        h3 {
            font-weight: 700;
            color: #222;
            margin-bottom: 25px;
            letter-spacing: 1px;
        }

        .form-group {
            position: relative;
        }

        .form-control {
            border-radius: 12px;
            padding-left: 45px;
            height: 45px;
            box-shadow: none;
        }

        .form-icon {
            position: absolute;
            top: 10px;
            left: 15px;
            font-size: 18px;
            color: #6c757d;
        }

        .btn-login {
            background: linear-gradient(90deg, #0d6efd, #1e8141);
            border: none;
            border-radius: 12px;
            padding: 12px;
            font-weight: 600;
            color: #fff;
            transition: all 0.3s;
            font-size: 16px;
        }

        .btn-login:hover {
            opacity: 0.9;
        }

        .text-danger {
            font-size: 13px;
            margin-bottom: 6px;
        }

        .forgot-link,
        .register-link {
            display: block;
            margin-top: 16px;
            font-size: 14px;
            font-weight: 600;
            text-decoration: none;
            transition: color 0.3s;
        }

        .forgot-link {
            color: #0d6efd;
        }

        .register-link {
            color: #1e8141;
        }

        .forgot-link:hover {
            color: #084298;
        }

        .register-link:hover {
            color: #155d34;
        }
    </style>
</head>
<body>
    <div class="login-card text-center">
        <div class="icon-user mb-2">
            <i class="fas fa-shield-alt text-danger"></i>
        </div>
        <h3>Đăng Nhập FAHASA</h3>

        <div class="text-danger mb-2" asp-validation-summary="All"></div>

        <form asp-action="Login" asp-controller="Account" method="post">
            <input type="hidden" asp-for="ReturnUrl" />

            <div class="form-group mb-3">
                <span class="form-icon"><i class="fas fa-user"></i></span>
                <input asp-for="Name" class="form-control" placeholder="Tên đăng nhập" />
                <div asp-validation-for="Name" class="text-danger"></div>
            </div>

            <div class="form-group mb-3">
                <span class="form-icon"><i class="fas fa-lock"></i></span>
                <input asp-for="Password" type="password" class="form-control" placeholder="Mật khẩu" />
                <div asp-validation-for="Password" class="text-danger"></div>
            </div>

            <button type="submit" class="btn btn-login w-100">ĐĂNG NHẬP</button>
        </form>
        <!-- Đăng nhập bằng Facebook -->
        <form method="post" asp-controller="Account" asp-action="ExternalLogin" class="mt-3">
            <input type="hidden" name="provider" value="Facebook" />
            <input type="hidden" name="returnUrl" value="@Model.ReturnUrl" />
            <button type="submit" class="btn btn-primary w-100 mb-2">
                <i class="fab fa-facebook-f me-2"></i> Đăng nhập bằng Facebook
            </button>
        </form>

        <!-- Đăng nhập bằng Google -->
        <form method="post" asp-controller="Account" asp-action="ExternalLogin">
            <input type="hidden" name="provider" value="Google" />
            <input type="hidden" name="returnUrl" value="@Model.ReturnUrl" />
            <button type="submit" class="btn btn-danger w-100">
                <i class="fab fa-google me-2"></i> Đăng nhập bằng Google
            </button>
        </form>
        <a href="#" class="forgot-link" data-bs-toggle="modal" data-bs-target="#forgotPassModal"><i class="fas fa-question-circle me-1"></i>Quên mật khẩu?</a>
        <!-- Forgot Password Modal -->
<div class="modal fade" id="forgotPassModal" tabindex="-1" aria-labelledby="forgotPassModalLabel" aria-hidden="true">
  <div class="modal-dialog modal-dialog-centered">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="forgotPassModalLabel">Quên mật khẩu</h5>
        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Đóng"></button>
      </div>
      <div class="modal-body">
        <form id="forgotPassForm" method="post" action="/Account/ForgotPassword">
          @Html.AntiForgeryToken()
          <div class="mb-3">
            <label for="Email">Nhập email tài khoản</label>
            <input type="email" class="form-control" name="Email" id="fpEmail" required />
            <div class="invalid-feedback">Hãy điền email hợp lệ.</div>
          </div>
          <div id="fpResult" class="text-success my-2"></div>
          <button type="submit" class="btn btn-primary w-100">Gửi yêu cầu</button>
        </form>
      </div>
    </div>
  </div>
</div>
        <!-- RESET PASSWORD POPUP -->
<div class="modal fade" id="resetPassModal" tabindex="-1" aria-labelledby="resetPassModalLabel" aria-hidden="true">
  <div class="modal-dialog modal-dialog-centered">
    <div class="modal-content">
      <div class="modal-header bg-primary text-white">
        <h5 class="modal-title" id="resetPassModalLabel">Đặt lại mật khẩu</h5>
        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Đóng"></button>
      </div>
      <div class="modal-body">
        <form id="resetPasswordForm" method="post" action="/Account/ResetPassword">
          <input type="hidden" name="Email" id="resetEmail" />
          <input type="hidden" name="Token" id="resetToken" />
          <div class="mb-3">
            <label for="resetPassword">Mật khẩu mới</label>
            <input type="password" class="form-control" name="Password" id="resetPassword" required minlength="6" />
          </div>
          <div class="mb-3">
            <label for="resetConfirm">Nhập lại mật khẩu</label>
            <input type="password" class="form-control" name="ConfirmPassword" id="resetConfirm" required minlength="6" />
            <div class="invalid-feedback">Hai mật khẩu không khớp.</div>
          </div>
          <div id="resetResult" class="text-success my-2"></div>
          <button type="submit" class="btn btn-primary w-100">Đặt lại mật khẩu</button>
        </form>
      </div>
    </div>
  </div>
</div>
        <a href="/Account/Register" class="register-link"><i class="fas fa-user-plus me-1"></i>Chưa có tài khoản? Đăng ký ngay</a>
    </div>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    <script>
// Popup forgot password AJAX submit
$(function() {
  $('#forgotPassForm').on('submit', function(e) {
    e.preventDefault();
    var email = $('#fpEmail').val();
    if(!email) { $('#fpEmail').addClass('is-invalid'); return; }
    $('#fpEmail').removeClass('is-invalid');
    var token = $('input[name="__RequestVerificationToken"]', this).val();
    $.ajax({
      type: 'POST',
      url: '/Account/ForgotPassword',
      data: $(this).serialize(),
      headers: { 'RequestVerificationToken': token },
      success: function() {
        $('#fpResult').html('Nếu email có tồn tại, hướng dẫn đặt lại mật khẩu đã được gửi!');
      },
      error: function(xhr) {
        let msg = xhr.status === 400 ? 'Lỗi bảo mật hoặc form chưa đầy đủ.' : 'Có lỗi xảy ra!';
        $('#fpResult').html('<span class="text-danger">'+msg+'</span>');
      }
    });
  });
  $('#forgotPassModal').on('hidden.bs.modal', function() {
    $('#fpEmail').val('');
    $('#fpResult').html('');
    $('#fpEmail').removeClass('is-invalid');
  });
});
// Show Reset Password popup if token+email in URL (for /Account/ResetPassword)
(function() {
  function getParam(name) {
      let m = location.search.match(new RegExp('(?:[?&]' + name + '=)([^&]*)'));
      return m ? decodeURIComponent(m[1].replace(/\+/g, ' ')) : '';
  }
  if (window.location.search.includes('reset=1')) {
    var email = getParam('email');
    var token = getParam('token');
    $(function() {
      $('#resetEmail').val(email);
      $('#resetToken').val(token);
      $('#resetPassModal').modal('show');
    });
  }
})();
$('#resetPasswordForm').on('submit', function(e) {
  e.preventDefault();
  var newPass = $('#resetPassword').val(), confirm = $('#resetConfirm').val();
  if (newPass !== confirm) {
    $('#resetConfirm').addClass('is-invalid'); return;
  }
  $('#resetConfirm').removeClass('is-invalid');
  $.ajax({
    type: 'POST',
    url: '/Account/ResetPassword',
    data: $(this).serialize(),
    success: function() {
      $('#resetResult').html('Mật khẩu đã được đặt lại thành công!');
      setTimeout(function(){ location.href = '/Account/Login'; }, 1800);
    },
    error: function(xhr) {
      let msg = xhr.responseText || 'Có lỗi xảy ra!';
      $('#resetResult').html('<span class="text-danger">'+msg+'</span>');
    }
  });
});
</script>
</body>
</html>
