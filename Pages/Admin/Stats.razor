@page "/admin/stats"
@inject IJSRuntime JS
@using System.Net.Http.Json
@using SportsStore.Models.ViewModels
@using Microsoft.JSInterop
@layout AdminLayout

<style>
    .stats-header {
        margin-bottom: 30px;
    }

    .page-title {
        font-size: 2rem;
        font-weight: 700;
        background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
        -webkit-background-clip: text;
        -webkit-text-fill-color: transparent;
        background-clip: text;
        display: flex;
        align-items: center;
        gap: 12px;
    }

    .stats-summary {
        display: grid;
        grid-template-columns: repeat(auto-fit, minmax(250px, 1fr));
        gap: 20px;
        margin-bottom: 25px;
    }

    .stat-card {
        background: white;
        border-radius: 16px;
        padding: 25px;
        box-shadow: 0 4px 20px rgba(0, 0, 0, 0.08);
        transition: all 0.3s ease;
        display: flex;
        align-items: center;
        gap: 20px;
    }

    .stat-card:hover {
        transform: translateY(-5px);
        box-shadow: 0 8px 30px rgba(0, 0, 0, 0.15);
    }

    .stat-icon {
        width: 70px;
        height: 70px;
        border-radius: 16px;
        display: flex;
        align-items: center;
        justify-content: center;
        font-size: 2rem;
    }

    .stat-icon.orders {
        background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
        color: white;
    }

    .stat-icon.revenue {
        background: linear-gradient(135deg, #11998e 0%, #38ef7d 100%);
        color: white;
    }

    .stat-icon.tutor {
        background: linear-gradient(135deg, #f093fb 0%, #f5576c 100%);
        color: white;
    }

    .stat-icon.total {
        background: linear-gradient(135deg, #4facfe 0%, #00f2fe 100%);
        color: white;
    }

    .stat-content {
        flex: 1;
    }

    .stat-label {
        font-size: 0.9rem;
        color: #666;
        font-weight: 600;
        margin-bottom: 8px;
    }

    .stat-value {
        font-size: 1.8rem;
        font-weight: 700;
        color: #333;
    }

    .stat-subvalue {
        font-size: 0.85rem;
        color: #999;
        margin-top: 4px;
    }

    .stats-filter-card {
        background: white;
        border-radius: 16px;
        padding: 25px;
        box-shadow: 0 4px 20px rgba(0, 0, 0, 0.08);
        margin-bottom: 25px;
    }

    .filter-row {
        display: flex;
        gap: 20px;
        align-items: end;
        flex-wrap: wrap;
    }

    .filter-group {
        flex: 1;
        min-width: 200px;
    }

    .filter-group label {
        font-weight: 600;
        color: #333;
        margin-bottom: 8px;
        display: block;
    }

    .filter-group input {
        width: 100%;
        padding: 12px 16px;
        border: 2px solid #e0e0e0;
        border-radius: 8px;
        font-size: 0.95rem;
        transition: all 0.3s ease;
    }

    .filter-group input:focus {
        outline: none;
        border-color: #667eea;
        box-shadow: 0 0 0 3px rgba(102, 126, 234, 0.1);
    }

    .filter-btn {
        background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
        color: white;
        border: none;
        padding: 12px 24px;
        border-radius: 8px;
        font-weight: 600;
        display: inline-flex;
        align-items: center;
        gap: 8px;
        transition: all 0.3s ease;
        box-shadow: 0 4px 15px rgba(102, 126, 234, 0.3);
        height: fit-content;
    }

    .filter-btn:hover {
        transform: translateY(-2px);
        box-shadow: 0 6px 20px rgba(102, 126, 234, 0.4);
    }

    .chart-card {
        background: white;
        border-radius: 16px;
        padding: 30px;
        box-shadow: 0 4px 20px rgba(0, 0, 0, 0.08);
    }

    .chart-container {
        position: relative;
        height: 400px;
    }
</style>

<div class="page-card">
    <div class="stats-header">
        <h2 class="page-title">
            <i class="fas fa-chart-bar"></i>
            <span>Thống kê doanh thu</span>
        </h2>
    </div>

    <div class="stats-summary">
        <div class="stat-card">
            <div class="stat-icon orders">
                <i class="fas fa-shopping-cart"></i>
            </div>
            <div class="stat-content">
                <div class="stat-label">Tổng đơn hàng</div>
                <div class="stat-value">@totalOrders</div>
                <div class="stat-subvalue">Đã giao thành công</div>
            </div>
        </div>

        <div class="stat-card">
            <div class="stat-icon revenue">
                <i class="fas fa-money-bill-wave"></i>
            </div>
            <div class="stat-content">
                <div class="stat-label">Doanh thu đơn hàng</div>
                <div class="stat-value">@orderRevenue.ToString("N0") đ</div>
                <div class="stat-subvalue">Trong khoảng thời gian</div>
            </div>
        </div>

        <div class="stat-card">
            <div class="stat-icon tutor">
                <i class="fas fa-chalkboard-teacher"></i>
            </div>
            <div class="stat-content">
                <div class="stat-label">Doanh thu gia sư</div>
                <div class="stat-value">@tutorRevenue.ToString("N0") đ</div>
                <div class="stat-subvalue">Trong khoảng thời gian</div>
            </div>
        </div>

        <div class="stat-card">
            <div class="stat-icon total">
                <i class="fas fa-chart-line"></i>
            </div>
            <div class="stat-content">
                <div class="stat-label">Tổng doanh thu</div>
                <div class="stat-value">@totalRevenue.ToString("N0") đ</div>
                <div class="stat-subvalue">Tổng cộng</div>
            </div>
        </div>
    </div>

    <div class="stats-filter-card">
        <div class="filter-row">
            <div class="filter-group">
                <label for="startDate">Từ ngày:</label>
                <input type="date" id="startDate" @bind="startDate" @bind:event="oninput" />
            </div>
            <div class="filter-group">
                <label for="endDate">Đến ngày:</label>
                <input type="date" id="endDate" @bind="endDate" @bind:event="oninput" />
            </div>
            <div>
                <button class="filter-btn" @onclick="LoadRevenueStats">
                    <i class="fas fa-filter"></i>
                    <span>Lọc thống kê</span>
                </button>
            </div>
        </div>
    </div>

    <div class="chart-card">
        <div class="chart-container">
            <canvas id="revenueChart"></canvas>
        </div>
    </div>
</div>

@code {
    private DateTime startDate = DateTime.Today.AddDays(-7);
    private DateTime endDate = DateTime.Today;

    private int totalOrders = 0;
    private decimal orderRevenue = 0;
    private decimal tutorRevenue = 0;
    private decimal totalRevenue = 0;

    protected override async Task OnAfterRenderAsync(bool firstRender)
    {
        if (firstRender)
        {
            await LoadRevenueStats();
        }
    }

    private async Task LoadRevenueStats()
    {
        try
        {
            string url = $"/admin/stats/revenue?fromDate={startDate:yyyy-MM-dd}&toDate={endDate:yyyy-MM-dd}";
            var stats = await Http.GetFromJsonAsync<List<RevenueStats>>(url);
            
            if (stats != null)
            {
                // Luôn cập nhật dữ liệu, ngay cả khi không có đơn hàng nào
                orderRevenue = stats.Sum(s => s.OrderRevenue);
                tutorRevenue = stats.Sum(s => s.TutorRevenue);
                totalRevenue = orderRevenue + tutorRevenue;
                
                // Calculate total orders from API
                await CalculateTotalOrders();
                
                // Render biểu đồ (sẽ hiển thị rỗng nếu không có dữ liệu)
                await JS.InvokeVoidAsync("renderRevenueWhenReady", stats);
                StateHasChanged();
            }
        }
        catch (Exception ex)
        {
            Console.WriteLine($"Error loading stats: {ex.Message}");
            // Reset về 0 nếu có lỗi
            orderRevenue = 0;
            tutorRevenue = 0;
            totalRevenue = 0;
            totalOrders = 0;
            StateHasChanged();
        }
    }

    private async Task CalculateTotalOrders()
    {
        try
        {
            string url = $"/admin/stats/order-count?fromDate={startDate:yyyy-MM-dd}&toDate={endDate:yyyy-MM-dd}";
            var result = await Http.GetFromJsonAsync<OrderCountResult>(url);
            totalOrders = result?.Count ?? 0;
        }
        catch
        {
            totalOrders = 0;
        }
    }

    public class OrderCountResult
    {
        public int Count { get; set; }
    }

    [Inject] public HttpClient Http { get; set; }
}
