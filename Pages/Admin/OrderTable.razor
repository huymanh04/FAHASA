@using SportsStore.Models
@using Microsoft.AspNetCore.Components

<style>
    .order-table-card {
        background: white;
        border-radius: 16px;
        overflow: hidden;
        box-shadow: 0 4px 20px rgba(0, 0, 0, 0.08);
        margin-bottom: 25px;
        transition: all 0.3s ease;
    }

    .order-table-card:hover {
        box-shadow: 0 8px 30px rgba(0, 0, 0, 0.12);
    }

    .order-table-header {
        background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
        color: white;
        padding: 18px 25px;
        font-weight: 700;
        font-size: 1.1rem;
        text-transform: uppercase;
        letter-spacing: 1px;
    }

    .order-table-content {
        padding: 0;
    }

    .order-table-content table {
        margin: 0;
    }

    .order-table-content thead {
        background: #f8f9ff;
    }

    .order-table-content thead th {
        padding: 15px;
        font-weight: 600;
        color: #667eea;
        text-transform: uppercase;
        font-size: 0.8rem;
        letter-spacing: 0.5px;
        border-bottom: 2px solid #e0e0e0;
    }

    .order-table-content tbody tr {
        transition: all 0.3s ease;
        border-bottom: 1px solid #f0f0f0;
    }

    .order-table-content tbody tr:hover {
        background: #f8f9ff;
    }

    .order-table-content tbody td {
        padding: 15px;
        vertical-align: middle;
    }

    .status-badge {
        padding: 8px 16px;
        border-radius: 20px;
        font-weight: 600;
        font-size: 0.85rem;
        display: inline-block;
    }

    .update-btn {
        background: linear-gradient(135deg, #f093fb 0%, #f5576c 100%);
        color: white;
        border: none;
        padding: 10px 20px;
        border-radius: 25px;
        font-weight: 600;
        font-size: 0.9rem;
        transition: all 0.3s ease;
        box-shadow: 0 4px 15px rgba(245, 87, 108, 0.3);
    }

    .update-btn:hover {
        transform: translateY(-2px);
        box-shadow: 0 6px 20px rgba(245, 87, 108, 0.4);
    }

    .cancel-btn {
        background: linear-gradient(135deg, #ff9a9e 0%, #f5576c 100%);
        color: white;
        border: none;
        padding: 10px 20px;
        border-radius: 25px;
        font-weight: 600;
        font-size: 0.9rem;
        transition: all 0.3s ease;
        box-shadow: 0 4px 15px rgba(245, 87, 108, 0.3);
        margin-top: 8px;
        width: 100%;
    }

    .cancel-btn:hover {
        transform: translateY(-2px);
        box-shadow: 0 6px 20px rgba(245, 87, 108, 0.4);
    }

    .empty-orders {
        text-align: center;
        padding: 40px;
        color: #999;
    }
</style>

<div class="order-table-card">
    <div class="order-table-header">
        <i class="fas fa-list-alt me-2"></i>@TableTitle
    </div>
    <div class="order-table-content">
        @if (Orders?.Any() == true)
        {
            <table class="table table-hover mb-0">
    <thead>
        <tr>
            <th>Người nhận</th>
            <th>Mã bưu điện</th>
            <th>Sản phẩm</th>
            <th>Số lượng</th>
            <th>Hình thức</th>
                        <th>Trạng thái & Thao tác</th>
        </tr>
    </thead>
    <tbody>
            @foreach (var order in Orders)
            {
                bool isFirstRow = true;

                foreach (var line in order.Lines)
                {
                    <tr>
                        @if (isFirstRow)
                        {
                                    <td rowspan="@order.Lines.Count"><strong>@order.Name</strong></td>
                                    <td rowspan="@order.Lines.Count"><code>@order.Zip</code></td>
                            isFirstRow = false;
                        }
                        <td>@line.Product?.Name</td>
                                <td><span class="badge bg-primary">@line.Quantity</span></td>
                        <td>
                            @if (line.IsRental)
                            {
                                        <span class="badge bg-info" style="padding: 6px 12px;">Thuê @line.RentalDays ngày</span>
                            }
                            else
                            {
                                        <span class="badge bg-success" style="padding: 6px 12px;">Mua</span>
                            }
                        </td>
                        @if (line == order.Lines.Last())
                        {
                            <td rowspan="@order.Lines.Count" class="text-center" style="min-width:180px;">
                                <div class="mb-2">
                                    <span class="status-badge bg-@GetBadgeColor(order.Status)">@GetStatusText(order.Status)</span>
                                </div>
                                <button class="update-btn" @onclick="() => OrderSelected.InvokeAsync(order.OrderID)">
                                    <i class="fas fa-sync-alt me-1"></i>@ButtonLabel
                                </button>
                                @if (ShowCancelButton && order.Status != OrderStatus.DaHuy && order.Status != OrderStatus.DaNhanHang)
                                {
                                    <button class="cancel-btn" @onclick="() => CancelOrder.InvokeAsync(order.OrderID)">
                                        <i class="fas fa-ban me-1"></i>Hủy đơn
                                    </button>
                                }
                            </td>
                        }
                    </tr>
                }
            }
                </tbody>
            </table>
        }
        else
        {
            <div class="empty-orders">
                <i class="fas fa-inbox" style="font-size: 3rem; opacity: 0.3;"></i>
                <p class="mt-3">Không có đơn hàng</p>
            </div>
        }
    </div>
</div>

@code {
    [Parameter]
    public string TableTitle { get; set; } = "Orders";

    [Parameter]
    public IEnumerable<Order> Orders { get; set; } = Enumerable.Empty<Order>();

    [Parameter]
    public string ButtonLabel { get; set; } = "Cập nhật";

    [Parameter]
    public EventCallback<int> OrderSelected { get; set; }

    [Parameter]
    public bool ShowCancelButton { get; set; } = false;

    [Parameter]
    public EventCallback<int> CancelOrder { get; set; }

    private string GetStatusText(OrderStatus status) => status switch
    {
        OrderStatus.ChoXacNhan => "Chờ xác nhận",
        OrderStatus.ChoGiaoHang => "Chờ giao hàng",
        OrderStatus.DangVanChuyen => "Đang vận chuyển",
        OrderStatus.DaNhanHang => "Đã nhận hàng",
        OrderStatus.DaHuy => "Đã hủy",
        OrderStatus.YeuCauHoanTien => "Yêu cầu hoàn tiền",
        OrderStatus.HoanTienThanhCong => "Hoàn tiền thành công",
        _ => "Không xác định"
    };

    private string GetBadgeColor(OrderStatus status) => status switch
    {
        OrderStatus.ChoXacNhan => "secondary",
        OrderStatus.ChoGiaoHang => "info",
        OrderStatus.DangVanChuyen => "warning",
        OrderStatus.DaNhanHang => "success",
        OrderStatus.DaHuy => "danger",
        OrderStatus.YeuCauHoanTien => "warning",
        OrderStatus.HoanTienThanhCong => "success",
        _ => "secondary"
    };
}
